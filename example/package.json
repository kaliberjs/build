{
	"scripts": {
		"build": "NODE_ENV=production kaliber-build",
		"watch": "CONFIG_ENV=dev kaliber-watch",
		"serve": "kaliber-serve",
		"serve-dev": "PORT=8000 kaliber-serve",
		"//": "only needed for library development",
		"install-library": "rm -R `yarn cache dir`/npm-@kaliber/build* ; yarn upgrade file:../library --dev",
		"watch-library": "npm-watch"
	},
	"//": "only needed for library development",
	"devDependencies": {
		"@kaliber/build": "file:../library",
		"npm-watch": "^0.1.8"
	},
	"watch": {
		"install-library": "../library/"
	}
}
